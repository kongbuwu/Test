<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="CustomNodeLineView">

        <!-- 顶部节点外环半径 -->
        <attr name="topNodeOutSideRadius" format="dimension"></attr>
        <!-- 顶部节点内环半径 -->
        <attr name="topNodeInSideRadius" format="dimension"></attr>
        <!-- 其他节点半径 -->
        <attr name="otherNodeRadius" format="dimension"></attr>
        <!-- 节点（半径外）之间的距离 -->
        <attr name="nodeRadiusDistance" format="dimension"></attr>
        <!-- 顶部节点颜色 -->
        <attr name="topNodeColor" format="color"></attr>
        <!-- 其他节点颜色 -->
        <attr name="otherNodeColor" format="color"></attr>
        <!-- item顶部内边距边距 -->
        <attr name="itemPaddingTop" format="dimension"></attr>
        <!-- 节点个数 -->
        <attr name="nodeCount" format="integer"></attr>
        <!-- View的宽度 -->
        <attr name="viewWidth" format="dimension"></attr>

    </declare-styleable>
    <!-- Dialog对话框 -->
    <style name="MyLoadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">bottom</item>
    </style>

</resources>
